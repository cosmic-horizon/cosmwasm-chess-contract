{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GameSummary",
  "type": "object",
  "required": [
    "game_id",
    "player1",
    "player2",
    "start_height"
  ],
  "properties": {
    "block_time_limit": {
      "type": [
        "integer",
        "null"
      ],
      "format": "uint64",
      "minimum": 0.0
    },
    "game_id": {
      "type": "integer",
      "format": "uint64",
      "minimum": 0.0
    },
    "player1": {
      "type": "string"
    },
    "player2": {
      "type": "string"
    },
    "start_height": {
      "type": "integer",
      "format": "uint64",
      "minimum": 0.0
    },
    "status": {
      "anyOf": [
        {
          "$ref": "#/definitions/CwChessGameOver"
        },
        {
          "type": "null"
        }
      ]
    },
    "turn_color": {
      "anyOf": [
        {
          "$ref": "#/definitions/CwChessColor"
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "definitions": {
    "CwChessColor": {
      "type": "string",
      "enum": [
        "white",
        "black"
      ]
    },
    "CwChessGameOver": {
      "type": "string",
      "enum": [
        "black_checkmates",
        "black_resigns",
        "draw_accepted",
        "draw_declared",
        "stalemate",
        "white_checkmates",
        "white_resigns"
      ]
    }
  }
}
